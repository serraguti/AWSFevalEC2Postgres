@model List<Departamento>

<h1 style="color:blue">Departamentos Postgres</h1>

<table class="table table-warning">
    <thead>
        <tr>
            <th>Id Departamento</th>
            <th>Nombre</th>
            <th>Localidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Departamento dept in Model)
        {
            <tr>
                <td>@dept.IdDepartamento</td>
                <td>@dept.Nombre</td>
                <td>@dept.Localidad</td>
            </tr>
        }
    </tbody>
</table>